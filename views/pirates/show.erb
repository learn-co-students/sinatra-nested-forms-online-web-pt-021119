<h1>Pirate</h1>
<div class="pirate">
  <p>Name: <%= @pirate.name %></p>
  <p>Weight: <%= @pirate.weight %> pounds</p>
  <p>Height:: <%= @pirate.height %> inches</p>
</div>

<h2>Ship(s)</h2>
  <% @ships.each do |ship| %>
    <div class="ship">
      <p>Name: <%=ship.name%></p>
      <p>Type: <%=ship.type%></p>
      <p>Booty: <%=ship.booty%></p>
    </div><br>
  <% end %>
